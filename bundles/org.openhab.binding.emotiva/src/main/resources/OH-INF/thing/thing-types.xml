		<state readOnly="true">
			<options>
				<option value="Movie">@text/channel-type.emotiva.selected-movie-music.option.movie</option>
				<option value="Music">@text/channel-type.emotiva.selected-movie-music.option.music</option>
			</options>
		</state>
	</channel-type>

