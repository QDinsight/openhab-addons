	<!-- Channels requiring protocol V2 -->
	<channel-type id="selected-mode">
		<item-type>String</item-type>
		<label>User Selected Mode</label>
		<description>User selected mode for the main zone. An "Auto" value here might not mean the mode channel is in
			auto:
			"Stereo", "Direct", "Auto", etc.
		</description>
		<state readOnly="true">
			<options>
				<option value="All Stereo">@text/channel-type.emotiva.selected-mode.option.all-stereo</option>
				<option value="Auto">@text/channel-type.emotiva.selected-mode.option.auto</option>
				<option value="Direct">@text/channel-type.emotiva.selected-mode.option.direct</option>
				<option value="Dolby">@text/channel-type.emotiva.selected-mode.option.dolby</option>
				<option value="DTS">@text/channel-type.emotiva.selected-mode.option.dts</option>
