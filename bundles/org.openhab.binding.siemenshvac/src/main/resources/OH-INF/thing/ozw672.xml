<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="siemenshvac"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Bridge Thing Type -->
	<bridge-type id="ozw672">
		<label>OZW672 IP Gateway</label>
		<description>This is a OZW672 IP interface</description>

		<config-description>
			<parameter name="baseUrl" type="text">
				<label>Base URL</label>
				<description>The URL of the Siemens Hvac IP gateway</description>
				<context>network-address</context>
			</parameter>
			<parameter name="userName" type="text">
				<description>User name of the Siemens Hvac gateway</description>
				<required>false</required>
				<label>userName</label>
				<default>Administrator</default>
			</parameter>
			<parameter name="userPassword" type="text">
				<description>User password of the Siemens Hvac gateway</description>
				<required>false</required>
				<label>userPassword</label>
				<default>password</default>
			</parameter>
		</config-description>
	</bridge-type>


	
	
	
	<channel-type id="outside-temp">
        <item-type>Number:Temperature</item-type>
        <label>Outside temp</label>
        <description>Outside temp</description>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f %unit%" step="0.1">
        </state>
    </channel-type>
    
	
	<channel-type id="setpoint-heat-pump">
        <item-type>Number:Temperature</item-type>
        <label>Setpoint heat pump</label>
        <description>Setpoint heat pump</description>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f %unit%" step="0.1">
        </state>
    </channel-type>
	
	
	<channel-type id="room-temp-comfort-setpoint-hc">
		<item-type>Number:Temperature</item-type>
		<label>RoomTemp ComfSetp HC</label>
		<description>Room temperature Comfort setpoint HC</description>
		<category>Temperature</category>
		<state readOnly="true" pattern="%.1f %unit%" step="0.5">
		</state>
	</channel-type>
	
	<channel-type id="room-temp-reduce-setpoint-hc">
        <item-type>Number:Temperature</item-type>
        <label>RmTmp RedSetp HC</label>
        <description>Room temp reduced setpoint heat circuit</description>
        <category>Temperature</category>
        <state readOnly="true" pattern="%.1f %unit%" step="0.5">
        </state>
    </channel-type>
	
	<channel-type id="operating-mode-hc">
		<item-type>Number</item-type>
		<label>OptgMode HC</label>
		<description>Operating mode heat circuit</description>
		<command>
			<options>
				<option value="0">Protection mode</option>
				<option value="1">Automatic mode</option>
				<option value="2">Reduced mode</option>
				<option value="3">Comfort mode</option>
			</options>
		</command>
	</channel-type>

    <channel-type id="status-hc">
        <item-type>Number</item-type>
        <label>Status</label>
        <description>Status heating circuit</description>
        <category>Temperature</category>
        <command>
            <options>
                <option value="0">---</option>
                <option value="1">STB interrogé</option>
                <option value="2">Défaut</option>
                <option value="3">Contrôleur interrogé</option>
                <option value="4">Régime manuel actif</option>
                <option value="5">Fonction ramonage, pleine charge</option>
                <option value="6">Fonction ramonage, charge partielle</option>
                <option value="7">Fonction ramonage active</option>
                <option value="8">Bloqué, manuel</option>
                <option value="9">Bloqué, automatique</option>
            </options>
        </command>
    </channel-type>
    

</thing:thing-descriptions>
