<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="siemenshvac"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:thing="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/thing-description/v1.0.0 http://eclipse.org/smarthome/schemas/thing-description-1.0.0.xsd">

    <!-- Sample Thing Type -->
    
    <thing-type id="hvacBridge">
        <label>OZW672.01</label>
        <description>Control a Siemens Hvac Bridge over IP </description>

        <channels>
            <channel id="temperature" typeId="volumeChannelDimmer" />
            <channel id="setpoint" typeId="volumeChannelDimmer" />
        </channels>

        <config-description>
            <parameter name="address" type="text" required="true">
                <context>network-address</context>
                <label>Address</label>
                <description>The address of the Siemens Hvac bridge to control.</description>
            </parameter>
            <parameter name="tcpPort" type="integer" max="65535" min="1" required="true">
                <default>80</default>
                <label>TCP Port</label>
                <description>The TCP port number used to connect to the bridge.</description>
            </parameter>
            <parameter name="userName" type="text" required="true">
                <default>Administrator</default>
                <label>Utilisateur</label>
                <description>Nom de l'utilisateur.</description>
            </parameter>
            <parameter name="userPassword" type="text" required="true">
                <default>Mnbo32tyu2!</default>
                <label>Password</label>
                <description>Password de l'utilisateur.</description>
            </parameter>
        </config-description>
    </thing-type>

        

    <!-- Sample Channel Type -->
    <channel-type id="volumeChannelDimmer">
        <item-type>Dimmer</item-type>
        <label>SetPoint</label>
        <description>Increase/Decrease the temperature (Â°c)</description>
        <category>TemperatureControl</category>
        <state min="-50" max="50" pattern="%d %%" />
    </channel-type>

</thing:thing-descriptions>
