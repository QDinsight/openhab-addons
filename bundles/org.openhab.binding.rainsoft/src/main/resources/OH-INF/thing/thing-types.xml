<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="rainsoft"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- Account Thing Type -->
	<thing-type id="account">
		<label>RainSoft Account Binding Thing</label>
		<description>Account with rainsoft.com to access the devices</description>

		<config-description>
			<parameter name="username" type="text" required="true">
				<label>The Ring account's user name</label>
				<description>Enter the user name you used to subscribe to the RainSoft services.</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<label>The Ring account's password</label>
				<description>Enter the password you used to subscribe to the RainSoft services.</description>
				<context>password</context>
			</parameter>
			<parameter name="refreshInterval" type="integer">
				<label>The refresh interval</label>
				<description>How often to poll the RainSoft service for updates in seconds</description>
				<default>600</default>
			</parameter>
		</config-description>
	</thing-type>

	<!-- WCS Thing Type -->
	<thing-type id="wcs">
		<label>RainSoft Water Conditioning System Thing</label>
		<description>RainSoft Water Conditioning System</description>

		<channel-groups>
			<channel-group id="status" typeId="statusGroup"/>
		</channel-groups>
		<config-description>
			<parameter name="refreshInterval" type="integer">
				<label>The refresh interval</label>
				<description>How often to poll the RainSoft service for updates in seconds</description>
				<default>600</default>
			</parameter>
		</config-description>
	</thing-type>

	<!-- Channel Groups -->
	<channel-group-type id="statusGroup">
		<label>System Status</label>
		<description>System status information</description>
		<channels>
			<channel id="systemstatus" typeId="systemstatus"/>
			<channel id="statuscode" typeId="statuscode"/>
			<channel id="statusasof" typeId="statusasof"/>
			<channel id="regentime" typeId="regentime"/>
			<channel id="lastregen" typeId="lastregen"/>
			<channel id="airpurgehour" typeId="airpurgehour"/>
			<channel id="airpurgeminute" typeId="airpurgeminute"/>
			<channel id="lastfltregentime" typeId="lastfltregentime"/>
			<channel id="maxsalt" typeId="maxsalt"/>
			<channel id="saltlbs" typeId="saltlbs"/>
			<channel id="capacityremaining" typeId="capacityremaining"/>
			<channel id="vacationmode" typeId="vacationmode"/>
			<channel id="hardness" typeId="hardness"/>
			<channel id="pressure" typeId="pressure"/>
			<channel id="ironlevel" typeId="ironlevel"/>
			<channel id="drainflow" typeId="drainflow"/>
			<channel id="avgmonthsalt" typeId="avgmonthsalt"/>
			<channel id="dailywateruse" typeId="dailywateruse"/>
			<channel id="regens28day" typeId="regens28day"/>
			<channel id="water28day" typeId="water28day"/>
			<channel id="endofday" typeId="endofday"/>
			<channel id="salt28day" typeId="salt28day"/>
			<channel id="flowsinceregen" typeId="flowsinceregen"/>
			<channel id="lifetimeflow" typeId="lifetimeflow"/>
		</channels>
	</channel-group-type>

	<!-- Channel Types -->
	<channel-type id="systemstatus">
